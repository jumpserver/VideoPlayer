{
  "name": "video-player",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder --mac --win --linux",
    "buildapp": "vite build && electron-builder --mac --win --linux",
    "preview": "vite preview"
  },
  "build": {
    "asar": false,
    "productName": "JumpServer Video Player",
    "directories": {
      "output": "release/",
      "buildResources": "assets"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*"
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "assets/player.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets",
      "target": ["zip"]
    }
  },
  "dependencies": {
    "@cyolosecurity/asciinema-player": "3.6.3-3",
    "@vueuse/core": "^11.1.0",
    "@xterm/xterm": "^5.5.0",
    "electron-debug": "^4.0.1",
    "fflate": "^0.8.2",
    "guacamole-common-js-jumpserver": "1.1.0-c",
    "js-untar": "^2.0.0",
    "normalize.css": "^8.0.1",
    "pinia": "^2.2.2",
    "plyr-vue": "^2.6.8",
    "vue": "^3.4.37",
    "vue-i18n": "^9.14.0",
    "vue-router": "^4.4.3"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/node": "^22.5.1",
    "@unocss/preset-web-fonts": "^0.62.3",
    "@vicons/antd": "^0.12.0",
    "@vicons/carbon": "^0.12.0",
    "@vicons/fa": "^0.12.0",
    "@vicons/fluent": "^0.12.0",
    "@vicons/ionicons4": "^0.12.0",
    "@vicons/ionicons5": "^0.12.0",
    "@vicons/material": "^0.12.0",
    "@vicons/tabler": "^0.12.0",
    "@vitejs/plugin-vue": "^5.1.2",
    "electron": "^32.0.1",
    "electron-builder": "^24.13.3",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^9.9.1",
    "naive-ui": "^2.39.0",
    "prettier": "^3.3.3",
    "sass": "^1.78.0",
    "typescript": "^5.5.3",
    "unocss": "^0.62.3",
    "unplugin-auto-import": "^0.18.2",
    "unplugin-vue-components": "^0.27.4",
    "vite": "^5.4.1",
    "vite-plugin-electron": "^0.28.7",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vue-tsc": "^2.0.29"
  }
}
